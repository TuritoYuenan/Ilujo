<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="vn.turito.ilujo" >

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Ilujo"
        tools:targetApi="31" >
        <activity
            android:name=".converter.AreaConverter"
            android:exported="false"
            android:label="@string/title_activity_conv_area"
            android:theme="@style/Theme.Ilujo" />
        <activity
            android:name=".PhoneInfo"
            android:exported="false"
            android:label="@string/title_activity_phone_info"
            android:theme="@style/Theme.Ilujo" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Ilujo" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>